                            money = toDecimal2(money);
                            total += parseFloat(money);
                        }
                        else {
                            money = 0;
                        }
                        if (parseFloat(taxmoney)) {
                            taxmoney = toDecimal2(taxmoney);
                            total += parseFloat(taxmoney);
                        }
                        else {
                            taxmoney = 0;
                        }

