                                    return;
                                }
                                text = "转出行：" + zcyh + ",转入行：" + zryh;
                            }
                            else if (role == "固定资产") {
                                zcbh = $("#DI5").val();

                                if (zcbh == "") {
                                    submitMessageShow("请填写资产编号", "error");
                                    return;
                                }
                                text = "资产编号：" + zcbh;
                            }
                            else if (role == "预付原料") {
                                htbh = $("#DI6").val();
