                                    data: { b1: zcyh, b2: zryh },
                                    contentType: "application/json; charset=utf-8",
                                    datatype: "json",
                                    async: false,
                                    type: "GET",
                                    success: function (result1) {
                                        result1 = JSON.parse(result1);
                                        if (result1.error == "1") {
                                            submitMessageShow(result1.msg, "error");
                                            IsCanDo = false;
                                        }
