        $("#ChangeShop").css("color", "black");
        $("#CostCenter").css("color", "black");
        $("#DepartmentName").attr("disabled", false);
        $("#ChangeShop").attr("disabled", false);
        $("#CostCenter").attr("disabled", false);
    }
