<style type="text/css">
    .showBrand {
        display: block;
    }

@model Marisfrolg.Fee.Models.FeeBillModelRef
</style>

<script>
    $(function () {
        if ("@Model.BillNo" != "") {
            $("#Draft").hide();
            $("#DraftSub").attr("class", "col-md-8")
        }
    })
    //radio标签控制
    function InputControl(em) {
        if ($(em).hasClass("SelectBrand label-success")) {
            $(em).removeClass("SelectBrand label-success");
        }
        else {
            var flag = $(em).attr("val");  //得到分组
            $("#SpecialAttribute").children().each(function () {
                var temp = $(this).attr("val");
                if (flag == temp) {
                    $(this).removeClass("SelectBrand label-success");
                }
            });
            $(em).addClass("SelectBrand label-success");
        }
    }
</script>

<div class="page">

    <div class="hd">
        <h2 class="page_title">费用报销单</h2>
    </div>
    <div class="row ">
        @Html.Partial("~/Views/Shared/PersonInfo.cshtml", ViewData["FeeBillModelRef"] = Model)
    </div>

    @Html.Partial("~/Views/Shared/FindAccount.cshtml")


</div>



<div class="row ">
    <div class="col-md-4" id="Draft">
        <div class="bd">
